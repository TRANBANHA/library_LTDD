<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/post_ct"
    android:orientation="vertical">
    <TextView
        android:id="@+id/f_step_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buoc 1:"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/f_make_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuẩn bị 1 chiếc nồi sạch đổ : 250ml sữa tươi, 250ml sữa đặc, 400ml nước cốt dừa ( 1 lon ) quậy đều tay để các nguyên liệu được hòa với nhau."
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"

        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>