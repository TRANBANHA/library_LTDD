<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="-7dp"
            android:id="@+id/topPanel">
            <LinearLayout
                android:layout_width="415dp"
                android:layout_height="60dp"
                android:orientation="horizontal"

                android:layout_gravity="center|top"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="50dp"
                    android:background="@drawable/earth" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="#206E56"
                    android:text="Sổ tay của bạn">

                </TextView>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="50dp"
                    android:background="@drawable/tune" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_like2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                app:backgroundTint="@null"
                android:text="Yêu thích"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/btn_click2"
                android:textAllCaps="false"
                android:drawableStart="@drawable/heart_48"
                />
            <Button
                android:id="@+id/btn_save2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                app:backgroundTint="@null"
                android:text="Đã lưu"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/btn_click"
                android:textAllCaps="false"
                android:drawableStart="@drawable/save_48"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_data_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"/>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-7dp"
        android:id="@+id/bottomPaner">

        <LinearLayout
            android:layout_width="415dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/menu_custom"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"

                android:background="@drawable/home_green" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/fire"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/add"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/library"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/user"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>